<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" android:background="@drawable/cv_bg" android:id="@+id/constraint2">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/eth" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/imageView11"
        android:textAlignment="textStart"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
        android:textColor="#000000"
        android:textSize="12sp"
        style="@style/TextAppearance.AppCompat.Small"
         />

    <ImageView
        android:id="@+id/more2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_keyboard_arrow_right_green_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"


         />

</RelativeLayout>